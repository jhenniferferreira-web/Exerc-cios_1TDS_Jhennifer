#include <stdio.h>

int main() {
    int linhas, i, j;
    int numero = 1;

    printf("Digite o numero de linhas: ");
    scanf("%d", &linhas);

    for (i = 1; i <= linhas; i++) {
        for (j = 1; j <=i; j++) {
            printf("%d ", numero);
            numero++;
        }
        printf("\n");
    }
    
}
